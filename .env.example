# Environment variables for Sistema Prisional Docker Compose
# Copy this file to .env and modify as needed

# MySQL Database (Prisioneiro Core)
MYSQL_ROOT_PASSWORD=1234
MYSQL_DATABASE=sistema_prisional

# PostgreSQL Database (Visitas Service)
POSTGRES_DB=visitas_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# Application Ports
PRISIONEIRO_CORE_PORT=8080
VISITAS_SERVICE_PORT=8081
FRONTEND_PORT=4200
MYSQL_PORT=3306
POSTGRES_PORT=5433
KAFKA_PORT=9092
ZOOKEEPER_PORT=2181
